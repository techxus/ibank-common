<?xml version="1.0" encoding="UTF-8"?>
<!--
  ibank-model:
  - Pure data classes shared across services (DTOs/events/enums/errors)
  - NO Spring, NO JPA, NO controllers, NO runtime framework dependencies
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.ibank</groupId>
        <artifactId>ibank-parent</artifactId>
        <version>1.0.0</version>
        <relativePath>../ibank-parent/pom.xml</relativePath>
    </parent>

    <artifactId>ibank-model</artifactId>
    <packaging>jar</packaging>
    <name>ibank-model</name>
    <description>Shared models for ibank services (DTOs/events/enums/errors)</description>

    <dependencies>
        <!-- Lombok is optional; keep provided so it never becomes a runtime transitive dependency -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
