<?xml version="1.0" encoding="UTF-8"?>
<!--
  Root aggregator POM:
  - NO dependencies here
  - NO plugins here
  - Only declares modules so `mvn install` / `mvn deploy` builds everything
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.ibank</groupId>
    <artifactId>ibank-common</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>

    <name>ibank-common</name>
    <description>Root multi-module aggregator for ibank shared artifacts</description>

    <modules>
        <module>ibank-parent</module>
        <module>ibank-model</module>
        <module>ibank-starter</module>
    </modules>

    <distributionManagement>
        <repository>
            <id>github</id>
            <name>GitHub Packages</name>
            <url>https://maven.pkg.github.com/techxus/ibank-common</url>
        </repository>
    </distributionManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <configuration>
                        <skip>true</skip>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
